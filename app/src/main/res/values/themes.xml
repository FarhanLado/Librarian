<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Librarian" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenuCustomStyle</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/pregular</item>
        <item name="android:fontFamily">@font/pregular</item>
    </style>

    <style name="OptionsMenuCustomStyle" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:ignore="NewApi">false</item>
    </style>
</resources>